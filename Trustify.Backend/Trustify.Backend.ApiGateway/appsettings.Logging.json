{
  "Serilog": {
    "Using": [ "Serilog.Expressions" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails",
      "WithEnvironmentUserName",
      "WithMachineName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Theme": "Code",
        "Args": {
          "outputTemplate": "{Timestamp:o} [{Level:u3}] {LogType} [{CompanyCode} {ClientId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "{Timestamp:o} [{Level:u3}] {LogType} [{CompanyCode} {ClientId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "./Logs/trustify_.txt",
                  "rollingInterval": "Day",
                  "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
                }
              }
            ]
          }
        }
      }
    ]
  },
  "SerilogElasticsearch": {
    "enabled": false,
    "nodeUris": "https://localhost:5019",
    "username": "elastic",
    "password": "mHqQTSVi482stS3rs5gg",
    "period": 6,
    "bufferLogShippingInterval": 2,
    "indexFormat": "pmlogs-{0:yyyy.MM.dd}",
    "autoRegisterTemplate": true,
    "autoRegisterTemplateVersion": "ESv7",
    "connectionTimeout": 5,
    "bufferBaseFilename": "./Logs/trflogs-buffer.json"
  }
}
